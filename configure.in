dnl initialization
AC_INIT(src/tnef.c)
AM_INIT_AUTOMAKE(tnef,1.1.1)
AM_CONFIG_HEADER(config.h)

dnl check for programs
AC_PROG_AWK
AC_PROG_CC
AM_PROG_CC_STDC
AC_PROG_INSTALL
AC_PROG_RANLIB

dnl check for executable extentions
AC_EXEEXT

dnl check for libraries

dnl check for headers
AC_HEADER_STDC
AC_CHECK_HEADERS(memory.h)
AC_CHECK_HEADERS(string.h)

dnl check for typedefs
AC_TYPE_SIZE_T

dnl check for structures 

dnl check for compiler characteristics.
dnl AC_C_BIGENDIAN
AC_C_CONST
AC_CHECK_SIZEOF(int,0)

dnl check for library functions
AC_REPLACE_FUNCS(strdup getopt_long basename ldiv)
AC_CHECK_FUNCS(strrchr memmove)
AC_FUNC_VPRINTF

dnl check for system services

dnl extra arguments:
AM_MAINTAINER_MODE
AC_ARG_ENABLE( warnings, 
               [ --enable-warnings	enable compile warnings],
               AC_COMPILE_WARNINGS)
AC_ARG_ENABLE( debug,
               [ --enable-debug  enable debug build],
               AC_DEBUG_COMPILE)

dnl output
AC_OUTPUT(Makefile tnef.spec doc/Makefile src/Makefile tests/Makefile)

